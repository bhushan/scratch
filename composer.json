{
  "name": "enlight/scratch",
  "description": "Markdown to PDF book builder",
  "keywords": [
    "markdown",
    "book",
    "pdf",
    "php"
  ],
  "homepage": "https://github.com/bhushan/scratch",
  "license": "MIT",
  "authors": [
    {
      "name": "Bhushan Gaikwad",
      "email": "bhushangaykawad@gmail.com"
    },
    {
      "name": "Mohamed Said",
      "email": "themsaid@gmail.com"
    }
  ],
  "bin": [
    "scratch"
  ],
  "require": {
    "illuminate/filesystem": "^7.0|^8.0",
    "illuminate/support": "^7.0|^8.0",
    "symfony/console": "^4.2|^5.0",
    "mpdf/mpdf": "^8.0",
    "spatie/commonmark-highlighter": "^2.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.18",
    "symfony/var-dumper": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Scratch\\": "src/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "csfix": [
      "php-cs-fixer fix src stubs"
    ],
    "csfix-review": [
      "php-cs-fixer fix src stubs --dry-run -v"
    ]
  },
  "scripts-descriptions": {
    "csfix": "Runs PHP CS Fixer to fix project files.",
    "csfix-review": "Runs PHP CS Fixer to show the details of which files are out of code standard."
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
